---
import type { ExcerptToken } from '../../lib/doc-model/render-excerpt-tokens';
import CodeExcerpt from '../excerpt/code-excerpt.astro';

interface Props {
  members: {
    name: string;
    type: ExcerptToken[];
    description: string
  }[];
}

const { members } = Astro.props;
---

<style>
    .type {
        text-align: center;
    }
</style>

<h3>Properties</h3>
<table>
  <tbody>
    {
      members.map((member) => (
        <tr>
          <>
            <th>{member.name}</th>
            <td class="type">
              <CodeExcerpt  excerpt={member.type} />
            </td>
            <td>
                {member.description}
            </td>
          </>
        </tr>
      ))
    }
  </tbody>
</table>
