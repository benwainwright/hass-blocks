{
  "name": "docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/docs/src",
  "tags": [],
  "targets": {
    "gen-docs": {
      "executor": "@hass-blocks/publisher:build-docs",
      "options": {
        "modelFolder": "apps/docs/models",
        "outputFolder": "apps/docs/docs/api-docs"
      }
    },

    "build": {
      "dependsOn": ["gen-docs"],
      "executor": "@nx-extend/docusaurus:browser",
      "options": {
        "outputPath": "apps/docs/dist"
      }
    },
    "serve": {
      "dependsOn": ["gen-docs"],
      "executor": "@nx-extend/docusaurus:dev-server",
      "options": {
        "port": 3000
      }
    },
    "package": {
      "executor": "@nx-iac/aws-cdk:synthesize",
      "dependsOn": ["build"],
      "outputs": ["{options.output}"],
      "options": {
        "output": "cdk.out/apps/docs",
        "quiet": true
      }
    },
    "deploy": {
      "executor": "@nx-iac/aws-cdk:deploy",
      "dependsOn": ["package"],
      "defaultConfiguration": "normal",
      "options": {
        "app": "cdk.out/apps/docs",
        "stacks": "--all"
      },
      "configurations": {
        "normal": {},
        "quick": {
          "hotswapFallback": true,
          "noRollback": true
        }
      }
    },
    "destroy": {
      "executor": "@nx-iac/aws-cdk:destroy",
      "dependsOn": ["package"],
      "options": {
        "app": "cdk.out/apps/docs",
        "stacks": "--all",
        "force": true
      }
    }
  }
}
