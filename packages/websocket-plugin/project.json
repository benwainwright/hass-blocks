{
  "name": "@hass-blocks/websocket-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/websocket-plugin/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/websocket-plugin/dist",
        "main": "packages/websocket-plugin/src/index.ts",
        "tsConfig": "packages/websocket-plugin/tsconfig.lib.json",
        "skipTypeCheck": true,
        "stripLeadingPaths": true
      }
    },
    "rollup-api": {
      "dependsOn": ["typecheck"],
      "executor": "@hass-blocks/publisher:api-extractor",
      "outputs": ["{options.outputPath}"],
      "options": {
        "mainEntrypointFile": "packages/homeassistant-typescript/dist/index.d.ts",
        "reportFolder": "packages/homeassistant-typescript/api",
        "projectFolder": "packages/homeassistant-typescript"
      }
    },
    "e2e-test": {
      "executor": "@nx/vite:test",
      "configurations": {
        "post-release": {}
      },
      "options": {
        "cwd": "packages/homeassistant-typescript",
        "config": "packages/homeassistant-typescript/vite.config.e2e.ts"
      }
    }
  }
}
